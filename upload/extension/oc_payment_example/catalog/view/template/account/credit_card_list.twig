<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>{{ column_payment_method }}</th>
        <th></th>
        <th>{{ column_type }}</th>
        <th>{{ column_date_expire }}</th>
        <th class="text-end">{{ column_action }}</th>
      </tr>
    </thead>
    <tbody>
      {% if credit_cards %}
        {% for credit_card in credit_cards %}
          <tr>
            <td>{{ credit_card.name }}</td>
            <td>{{ credit_card.image }}</td>
            <td>{{ credit_card.type }}</td>
            <td>{{ credit_card.date_expire }}</td>
            <td class="text-end"><a href="{{ credit_card.delete }}" class="btn btn-danger">{{ button_delete }}</a></td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td colspan="5" class="text-center">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4"></td>
        <td class="text-end"><button type="button" class="btn btn-primary">{{ button_add }}</button></td>
      </tr>
    </tfoot>
  </table>
</div>