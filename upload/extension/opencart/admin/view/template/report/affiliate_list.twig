<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td class="text-start">{{ column_affiliate }}</td>
        <td class="text-start">{{ column_email }}</td>
        <td class="text-end">{{ column_total }}</td>
      </tr>
    </thead>
    <tbody>
      {% if affiliates %}
        {% for affiliate in affiliates %}
          <tr>
            <td class="text-start"><a href="{{ affiliate.edit }}">{{ affiliate.affiliate }}</a></td>
            <td class="text-start">{{ affiliate.email }}</td>
            <td class="text-end">{{ affiliate.total }}</td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="3">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-start">{{ pagination }}</div>
  <div class="col-sm-6 text-end">{{ results }}</div>
</div>