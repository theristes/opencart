<div class="row">
  <div id="filter-report" class="col-lg-3 col-md-12 order-lg-last d-none d-lg-block mb-3">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-filter"></i> {{ text_filter }}</div>
      <div class="card-body">
        <div class="mb-3">
          <label for="input-payment" class="col-form-label">{{ entry_payment }}</label>
          <select name="filter_payment" id="input-payment" class="form-select">
            {% for payment in payments %}
              <option value="{{ payment.value }}">{{ payment.text }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="mb-3">
          <label for="input-limit" class="col-form-label">{{ entry_limit }}</label>
          <select name="limit" id="input-limit" class="form-select">
            {% for limit in limits %}
              <option value="{{ limit.value }}">{{ limit.text }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="text-end">
          <button type="button" id="button-filter" class="btn btn-light"><i class="fa-solid fa-filter"></i> {{ button_filter }}</button>
        </div>
      </div>
    </div>
  </div>
  <div class="col col-lg-9 col-md-12">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-chart-bar"></i> {{ heading_title }}</div>
      <div id="affiliate" class="card-body">{{ list }}</div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#affiliate').on('click', '.pagination a', function (e) {
    e.preventDefault();

    $('#affiliate').load(this.href);
});

$('#button-filter').on('click', function () {
    var url = '';

    var filter_payment = $('#input-payment').val();

    if (filter_payment) {
        url += '&filter_payment=' + filter_payment;
    }

    var limit = $('#input-limit').val();

    if (limit) {
        url += '&limit=' + limit;
    }

    $('#affiliate').load('index.php?route=extension/opencart/report/affiliate.list&user_token={{ user_token }}' + url);
});
//--></script>
