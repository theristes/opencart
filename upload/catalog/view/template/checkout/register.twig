$('#button-register').on('click', function() {
    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=checkout/register|save', type: 'post', data: $('#checkout-account input[type=\'text\'], #checkout-account input[type=\'date\'], #checkout-account input[type=\'datetime-local\'], #checkout-account input[type=\'time\'], #checkout-account input[type=\'password\'], #checkout-account input[type=\'hidden\'], #checkout-account input[type=\'checkbox\']:checked, #checkout-account input[type=\'radio\']:checked, #checkout-account textarea, #collapse-payment-address select'),
            dataType: 'json',
            beforeSend: function() {
                $('#button-register').button('loading');
            },
            success: function(json) {
                $('.alert-dismissible, .text-danger').remove();
                $('.is-invalid').removeClass('is-invalid');

                if (json['redirect']) {
                    location = json['redirect'];
                }

                if (json['error']) {
                    $('#button-register').button('reset');

                    if (json['error']['warning']) {
                        $('#collapse-payment-address .card-body').prepend('<div class="alert alert-danger alert-dismissible"><i class = "fas fa-exclamation-circle" > < /i> ' + json['error']['warning'] + '<button type="button" class="btn-close" data-dismiss="alert"></button > < /div>');
                    }

                    for (i in json['error']) {
                        var element = $('#input-payment-' + i.replace('_', '-'));

                        if ($(element).parent().hasClass('input-group')) {
                            $(element).parent().after('<div class="text-danger">' + json['error'][i] + '</div>');
                        } else {
                            $(element).after('<div class="text-danger">' + json['error'][i] + '</div>');
                        }

                        $(element).addClass('is-invalid');
                    }
                }
            },
            error: function(xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });

    // Sort the custom fields
    $('#account .mb-3[data-sort]').detach().each(function() {
        if ($(this).attr('data-sort') >= 0 && $(this).attr('data-sort') <= $('#account .mb-3').length) {
            $('#account .mb-3').eq($(this).attr('data-sort')).before(this);
        }

        if ($(this).attr('data-sort') > $('#account .mb-3').length) {
            $('#account .mb-3:last').after(this);
        }

        if ($(this).attr('data-sort') == $('#account .mb-3').length) {
            $('#account .mb-3:last').after(this);
        }

        if ($(this).attr('data-sort') < -$('#account .mb-3').length) {
            $('#account .mb-3:first').before(this);
        }
    });
});


$('#checkout-register select[name=\'country_id\']').on('change', function() {
