<fieldset>
  <legend>{{ text_shipping_method }}</legend>
  <select name="shipping_method" id="input-shipping-method" class="form-select">
    <option value="">{{ text_select }}</option>
    {% for shipping_method in shipping_methods %}
      <optgroup label="{{ shipping_method.title }}">
        {% if not shipping_method.error %}
          {% for quote in shipping_method.quote %}
            {% if quote.code == code or not code %}
              {% set code = quote.code %}
              <option value="{{ quote.code }}" selected>{{ quote.title }} - {{ quote.text }}</option>
            {% else %}
              <option value="{{ quote.code }}">{{ quote.title }} - {{ quote.text }}</option>
            {% endif %}
          {% endfor %}
        {% else %}
          <option value="" disabled>{{ shipping_method.error }}</option>
        {% endif %}
      </optgroup>
    {% endfor %}
  </select>
</fieldset>
<br/>
<script type="text/javascript"><!--
// Shipping Method
$('#button-shipping-method').on('click', function() {
    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=checkout/shipping_method|save',
            type: 'post',
            data: $('#collapse-shipping-method input[type=\'radio\']:checked, #collapse-shipping-method textarea'),
            dataType: 'json',
            beforeSend: function() {
                $('#button-shipping-method').button('loading');
            },
            success: function(json) {
                $('.alert-dismissible, .text-danger').remove();

                if (json['redirect']) {
                    location = json['redirect'];
                } else if (json['error']) {
                    $('#button-shipping-method').button('reset');

                    if (json['error']['warning']) {
                        $('#collapse-shipping-method .card-body').prepend('<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> ' + json['error']['warning'] + '<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                    }
                } else {
                    chain.attach(function() {
                        return $.ajax({
                            url: 'index.php?route=checkout/payment_method',
                            dataType: 'html',
                            complete: function() {
                                $('#button-shipping-method').button('reset');
                            },
                            success: function(html) {
                                $('#collapse-payment-method .card-body').html(html);

                                $('#heading-payment-method').trigger('click');

                                $('#heading-checkout-confirm').removeAttr('data-bs-toggle');
                            },
                            error: function(xhr, ajaxOptions, thrownError) {
                                oc.alert('danger', thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                                console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                            }
                        });
                    });
                }
            },
            error: function(xhr, ajaxOptions, thrownError) {
                oc.alert('danger', thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });
});
//--></script>