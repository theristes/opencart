{{ header }}
<div id="checkout-checkout" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="btn-close" data-dismiss="alert"></button>
    </div>
  {% endif %}
  <div class="row row-cols-2">{{ column_left }}
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>

      {% if not logged %}
        <div id="checkout-login">{{ login }}</div>
        <div id="checkout-register">{{ register }}</div>
      {% endif %}

      {% if config_checkout_address %}
        <div id="checkout-payment-address">{{ payment_address }}</div>
      {% endif %}

      {% if shipping_required %}
        <div id="checkout-shipping-address">{{ shipping_address }}</div>
        <div id="checkout-shipping-method">{{ shipping_method }}</div>
      {% endif %}

      <div id="checkout-payment-method">{{ payment_method }}</div>
      <div id="checkout-confirm">{{ confirm }}</div>

      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
<script type="text/javascript"><!--
$('#collapse-checkout-option').on('change', 'input[name=\'account\']', function() {
    if (this.value == 'register') {
        $('#heading-payment-address').html('{{ text_checkout_account }}');
    } else {
        $('#heading-payment-address').html('{{ text_checkout_payment_address }}');
    }
});

{% if not logged %}
$(document).ready(function() {
    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=checkout/login',
            dataType: 'html',
            success: function(html) {
                $('#collapse-checkout-option .accordion-body').html(html);

                $('#heading-checkout-option').attr('data-bs-toggle', 'collapse');

                $('#heading-checkout-option').trigger('click');
            },
            error: function(xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });
});
{% else %}
$(document).ready(function() {
    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=checkout/payment_address',
            dataType: 'html',
            success: function(html) {
                $('#collapse-payment-address .accordion-body').html(html);

                $('#heading-payment-address').attr('data-bs-toggle', 'collapse');

                $('#heading-payment-address').trigger('click');
            },
            error: function(xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });
});
{% endif %}
//--></script>
{{ footer }}