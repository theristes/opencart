{% if comments %}
  {% for comment in comments %}
    <div id="comment-{{ comment.article_comment_id }}" class="border mb-3">
      <div class="p-2">
        <p>{{ text_by }} {{ comment.author }} - {{ comment.date_added }}</p>
        <p>{{ comment.comment }}</p>
        <div class="text-end">
          <button type="button" value="{{ comment.like }}" data-oc-toggle="rate" class="btn btn-outline-secondary"><i class="fa fa-thumbs-up"></i></button>
          <button type="button" value="{{ comment.dislike }}" data-oc-toggle="rate" class="btn btn-outline-secondary"><i class="fa fa-thumbs-down"></i></button>
          {% if comment_guest %}
            <button type="button" value="{{ comment.reply_add }}" data-oc-toggle="comment" data-oc-target="#reply-{{ comment.article_comment_id }}" class="btn btn-outline-secondary">{{ button_reply }}</button>
          {% else %}
            <button type="button" class="btn btn-outline-secondary" disabled="disabled">{{ button_reply }}</button>
          {% endif %}
        </div>
      </div>
      <div id="reply-{{ comment.article_comment_id }}" class="border-top">
        <div id="reply-{{ comment.article_comment_id }}-0" class="text-center p-2">
          {% if comment.reply_total %}
            <button type="button" value="{{ comment.reply }}" data-oc-toggle="next" data-oc-target="#reply-{{ comment.article_comment_id }}-0" class="btn btn-outline-secondary">{{ button_replies }} ({{ comment.reply_total }})</button>
          {% else %}
            <button type="button" class="btn btn-outline-secondary" disabled>{{ button_replies }}</button>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
  <div class="text-end">{{ pagination }}</div>
{% else %}
  <p class="text-center">{{ text_no_results }}</p>
{% endif %}


