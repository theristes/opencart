{% if currencies|length > 1 %}
  <form id="form-currency" action="{{ action }}" method="post" enctype="multipart/form-data">
    <div class="dropdown">
      <a href="#" data-bs-toggle="dropdown" class="dropdown-toggle"><strong>{{ symbol_left ?: symbol_right }}</strong> <span class="d-none d-md-inline">{{ text_currency }}</span> <i class="fa-solid fa-caret-down"></i></a>
      <ul class="dropdown-menu">
        {% for currency in currencies %}
          <li><a href="{{ currency.code }}" class="dropdown-item">{{ currency.symbol_left ?: currency.symbol_right }} {{ currency.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <input type="hidden" name="code" value=""/>
    <input type="hidden" name="redirect" value="{{ redirect }}"/>
  </form>
{% endif %}
