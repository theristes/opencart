            </select>
          </div>
          <input type="hidden" name="payment_firstname" value="{{ payment_firstname }}" id="input-payment-firstname"/> <input type="hidden" name="payment_lastname" value="{{ payment_lastname }}" id="input-payment-lastname"/> <input type="hidden" name="payment_company" value="{{ payment_company }}" id="input-payment-company"/> <input type="hidden" name="payment_address_1" value="{{ payment_address_1 }}" id="input-payment-address-1"/> <input type="hidden" name="payment_address_2" value="{{ payment_address_2 }}" id="input-payment-address-2"/> <input type="hidden" name="payment_city" value="{{ payment_city }}" id="input-payment-city"/> <input type="hidden" name="payment_postcode" value="{{ payment_postcode }}" id="input-payment-postcode"/> <input type="hidden" name="payment_country" value="{{ payment_country }}" id="input-payment-country"/> <input type="hidden" name="payment_zone" value="{{ payment_zone }}" id="input-payment-zone"/>
          <div class="text-end">
            <button type="button" data-bs-dismiss="modal" class="btn btn-primary"><i class="fa-solid fa-check"></i> {{ button_continue }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div id="modal-shipping-address" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ text_shipping_address }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="form-shipping-address">
          <div class="mb-3">
            <select name="shipping_address_id" id="input-shipping-address" class="form-select">
              <option value="0" selected>{{ text_none }}</option>
              {% for address in addresses %}
                <option value="{{ address.address_id }}">{{ address.firstname }} {{ address.lastname }},{% if address.company %} {{ address.company }},{% endif %} {{ address.address_1 }}, {{ address.city }}, {{ address.country }}</option>
              {% endfor %}
            </select>
          </div>
