<div id="modal-master" class="modal fade">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-crown"></i> {{ name }}</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="alert alert-warning"><i class="fas fa-exclamation-circle"></i> You can copy the master products values to your variant from here.</div>
        <ul class="nav nav-tabs">
          <li class="nav-item"><a href="#tab-modal-general" data-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
          <li class="nav-item"><a href="#tab-modal-data" data-toggle="tab" class="nav-link">{{ tab_data }}</a></li>
          <li class="nav-item"><a href="#tab-modal-links" data-toggle="tab" class="nav-link">{{ tab_links }}</a></li>
          <li class="nav-item"><a href="#tab-modal-attribute" data-toggle="tab" class="nav-link">{{ tab_attribute }}</a></li>
          <li class="nav-item"><a href="#tab-modal-recurring" data-toggle="tab" class="nav-link">{{ tab_recurring }}</a></li>
          <li class="nav-item"><a href="#tab-modal-discount" data-toggle="tab" class="nav-link">{{ tab_discount }}</a></li>
          <li class="nav-item"><a href="#tab-modal-special" data-toggle="tab" class="nav-link">{{ tab_special }}</a></li>
          <li class="nav-item"><a href="#tab-modal-image" data-toggle="tab" class="nav-link">{{ tab_image }}</a></li>
          <li class="nav-item"><a href="#tab-modal-reward" data-toggle="tab" class="nav-link">{{ tab_reward }}</a></li>
          <li class="nav-item"><a href="#tab-modal-seo" data-toggle="tab" class="nav-link">{{ tab_seo }}</a></li>
          <li class="nav-item"><a href="#tab-modal-design" data-toggle="tab" class="nav-link">{{ tab_design }}</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="tab-modal-general">
            <ul class="nav nav-tabs" id="modal-language">
              {% for language in languages %}
                <li class="nav-item"><a href="#modal-language{{ language.language_id }}" data-toggle="tab" class="nav-link"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/> {{ language.name }}</a></li>
              {% endfor %}
            </ul>
            <div class="tab-content">
              {% for language in languages %}
                <div class="tab-pane" id="modal-language{{ language.language_id }}">
                  <div class="form-group required">
                    <label class="col-form-label" for="input-modal-name{{ language.language_id }}">{{ entry_name }}</label>
                    <div class="input-group">
                      <input type="text" name="product_description[{{ language.language_id }}][name]" value="{{ product_description[language.language_id] ? product_description[language.language_id].name }}" placeholder="{{ entry_name }}" id="input-modal-name{{ language.language_id }}" class="form-control"/>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label" for="input-modal-description{{ language.language_id }}">{{ entry_description }}</label>
                    <div class="input-group">
                      <textarea name="product_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-modal-description{{ language.language_id }}" data-toggle="ckeditor" data-lang="{{ ckeditor }}" class="form-control">{{ product_description[language.language_id] ? product_description[language.language_id].description }}</textarea>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="form-group required">
                    <label class="col-form-label" for="input-modal-meta-title{{ language.language_id }}">{{ entry_meta_title }}</label>
                    <div class="input-group">
                      <input type="text" name="product_description[{{ language.language_id }}][meta_title]" value="{{ product_description[language.language_id] ? product_description[language.language_id].meta_title }}" placeholder="{{ entry_meta_title }}" id="input-modal-meta-title{{ language.language_id }}" class="form-control"/>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label" for="input-modal-meta-description{{ language.language_id }}">{{ entry_meta_description }}</label>
                    <div class="input-group">
                      <textarea name="product_description[{{ language.language_id }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-modal-meta-description{{ language.language_id }}" class="form-control">{{ product_description[language.language_id] ? product_description[language.language_id].meta_description }}</textarea>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label" for="input-modal-modal-meta-keyword{{ language.language_id }}">{{ entry_meta_keyword }}</label>
                    <div class="input-group">
                      <textarea name="product_description[{{ language.language_id }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-modal-meta-keyword{{ language.language_id }}" class="form-control">{{ product_description[language.language_id] ? product_description[language.language_id].meta_keyword }}</textarea>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label" for="input-modal-tag{{ language.language_id }}">{{ entry_tag }}</label>
                    <div class="input-group">
                      <input type="text" name="product_description[{{ language.language_id }}][tag]" value="{{ product_description[language.language_id] ? product_description[language.language_id].tag }}" placeholder="{{ entry_tag }}" id="input-modal-tag{{ language.language_id }}" class="form-control"/>
                      <div class="input-group-append">
                        <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
          <div id="tab-modal-data" class="tab-pane">
