                <small class="form-text text-muted">{{ help_isbn }}</small>
              </div>
              <div class="form-group">
                <label class="col-form-label" for="input-mpn">{{ entry_mpn }}</label>
                <div class="input-group">
                  <input type="text" name="mpn" value="{{ mpn }}" placeholder="{{ entry_mpn }}" id="input-modal-mpn" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
