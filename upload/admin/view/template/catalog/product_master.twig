              <div class="form-group">
                <label class="col-form-label" for="input-location">{{ entry_location }}</label>
                <div class="input-group">
                  <input type="text" name="location" value="{{ location }}" placeholder="{{ entry_location }}" id="input-modal-location" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>{{ text_price }}</legend>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-price">{{ entry_price }}</label>
                <div class="input-group">
                  <input type="text" name="price" value="{{ price }}" placeholder="{{ entry_price }}" id="input-modal-price" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>{{ text_stock }}</legend>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-quantity">{{ entry_quantity }}</label>
                <div class="input-group">
                  <input type="text" name="quantity" value="{{ quantity }}" placeholder="{{ entry_quantity }}" id="input-modal-quantity" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-minimum">{{ entry_minimum }}</label>
                <div class="input-group">
                  <input type="text" name="minimum" value="{{ minimum }}" placeholder="{{ entry_minimum }}" id="input-modal-minimum" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
                <small class="form-text text-muted">{{ help_minimum }}</small>
              </div>
              <div class="form-group">
                <label class="col-form-label">{{ entry_subtract }}</label>
                <div class="input-group">
                  <select name="subtract" id="input-modal-subtract" class="form-control">
                    {% if subtract %}
                      <option value="1" selected="selected">{{ text_yes }}</option>
                      <option value="0">{{ text_no }}</option>
                    {% else %}
                      <option value="1">{{ text_yes }}</option>
                      <option value="0" selected="selected">{{ text_no }}</option>
                    {% endif %}
                  </select>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-date-available">{{ entry_date_available }}</label>
                <div class="input-group">
                  <input type="text" name="date_available" value="{{ date_available }}" placeholder="{{ entry_date_available }}" id="input-modal-date-available" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>{{ text_specification }}</legend>
              <div class="form-group">
                <label class="col-form-label">{{ entry_shipping }}</label>
                <div class="input-group">
                  <select name="subtract" id="input-modal-shipping" class="form-control">
                    {% if shipping %}
                      <option value="1" selected="selected">{{ text_yes }}</option>
                      <option value="0">{{ text_no }}</option>
                    {% else %}
                      <option value="1">{{ text_yes }}</option>
                      <option value="0" selected="selected">{{ text_no }}</option>
                    {% endif %}
                  </select>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-length">{{ entry_dimension }}</label>
                <div class="input-group">
                  <input type="text" name="length" value="{{ length }}" placeholder="{{ entry_length }}" id="input-modal-length" class="form-control"/> <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-modal-width" class="form-control"/> <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" id="input-modal-height" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-form-label" for="input-modal-weight">{{ entry_weight }}</label>
                <div class="input-group">
                  <input type="text" name="weight" value="{{ weight }}" placeholder="{{ entry_weight }}" id="input-modal-weight" class="form-control"/>
                  <div class="input-group-append">
                    <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-status">{{ entry_status }}</label>
              <div class="input-group">
                <select name="status" id="input-modal-status" class="form-control">
                  {% if status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
                <div class="input-group-append">
                  <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-sort-order">{{ entry_sort_order }}</label>
              <div class="input-group">
                <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-modal-sort-order" class="form-control"/>
                <div class="input-group-append">
                  <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                </div>
              </div>
            </div>
          </div>
          <div id="tab-modal-links" class="tab-pane">
            <div class="form-group">
              <label class="col-form-label" for="input-modal-manufacturer">{{ entry_manufacturer }}</label>
              <div class="input-group">
                <input type="text" name="manufacturer" value="{{ manufacturer }}" placeholder="{{ entry_manufacturer }}" id="input-modal-manufacturer" class="form-control"/> <input type="hidden" name="manufacturer_id" value="{{ manufacturer_id }}"/>
                <div class="input-group-append">
                  <button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-category">{{ entry_category }}</label>
              <div id="product-category" class="form-control" style="height: 150px; overflow: auto;">
                {% for product_category in product_categories %}
                  <div id="product-category{{ product_category.category_id }}"><i class="fas fa-minus-circle"></i> {{ product_category.name }}
                    <input type="hidden" name="product_category[]" value="{{ product_category.category_id }}"/>
                  </div>
                {% endfor %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-filter">{{ entry_filter }}</label>
              <div id="product-filter" class="form-control" style="height: 150px; overflow: auto;">
                {% for product_filter in product_filters %}
                  <div id="product-filter{{ product_filter.filter_id }}"><i class="fas fa-minus-circle"></i> {{ product_filter.name }}
                    <input type="hidden" name="product_filter[]" value="{{ product_filter.filter_id }}"/>
                  </div>
                {% endfor %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-form-label">{{ entry_store }}</label>
              <div class="form-control" style="height: 150px; overflow: auto;">
                {% for store in stores %}
                  <label class="form-check">
                    {% if store.store_id in product_store %}
                      <input type="checkbox" name="product_store[]" value="{{ store.store_id }}" checked="checked" class="form-check-input"/>
                      {{ store.name }}
                    {% else %}
                      <input type="checkbox" name="product_store[]" value="{{ store.store_id }}" class="form-check-input"/>
                      {{ store.name }}
                    {% endif %}
                  </label>
                {% endfor %}</div>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-download">{{ entry_download }}</label>
              <div id="product-download" class="form-control" style="height: 150px; overflow: auto;">
                {% for product_download in product_downloads %}
                  <div id="product-download{{ product_download.download_id }}"><i class="fas fa-minus-circle"></i> {{ product_download.name }}
                    <input type="hidden" name="product_download[]" value="{{ product_download.download_id }}"/>
                  </div>
                {% endfor %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="input-modal-related">{{ entry_related }}</label>
              <div id="product-related" class="form-control" style="height: 150px; overflow: auto;">
                {% for product_related in product_relateds %}
                  <div id="product-related{{ product_related.product_id }}"><i class="fas fa-minus-circle"></i> {{ product_related.name }}
                    <input type="hidden" name="product_related[]" value="{{ product_related.product_id }}"/>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <div id="tab-modal-attribute" class="tab-pane">
            <div class="table-responsive">
              <table id="attribute" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-left">{{ entry_attribute }}</td>
                    <td class="text-left">{{ entry_text }}</td>
                    <td></td>
                  </tr>
                </thead>
                <tbody>
                  {% set attribute_row = 0 %}
                  {% if product_attributes %}
                    {% for product_attribute in product_attributes %}
                      <tr id="attribute-row{{ attribute_row }}">
                        <td class="text-left"><input type="text" name="product_attribute[{{ attribute_row }}][name]" value="{{ product_attribute.name }}" placeholder="{{ entry_attribute }}" class="form-control"/> <input type="hidden" name="product_attribute[{{ attribute_row }}][attribute_id]" value="{{ product_attribute.attribute_id }}"/></td>
                        <td class="text-left">
                          {% for language in languages %}
                            <div class="input-group mb-12">
                              <div class="input-group-prepend">
                                <span class="input-group-text"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/></span>
                              </div>
                              <textarea name="product_attribute[{{ attribute_row }}][product_attribute_description][{{ language.language_id }}][text]" rows="5" placeholder="{{ entry_text }}" class="form-control">{{ product_attribute.product_attribute_description[language.language_id] ? product_attribute.product_attribute_description[language.language_id].text }}</textarea>
                            </div>
                          {% endfor %}</td>
                        <td class="text-right"><button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button></td>
                      </tr>
                      {% set attribute_row = attribute_row + 1 %}
                    {% endfor %}
                  {% else %}
                    <tr>
                      <td colspan="3" class="text-center">{{ text_no_results }}</td>
                    </tr>
                  {% endif %}
                </tbody>
              </table>
            </div>
          </div>
          <div id="tab-modal-recurring" class="tab-pane">
            <div class="table-responsive">
              <table id="recurring" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-left">{{ entry_recurring }}</td>
                    <td class="text-left">{{ entry_customer_group }}</td>
                    <td class="text-left"></td>
                  </tr>
                </thead>
                <tbody>
                  {% set recurring_row = 0 %}
                  {% if product_recurrings %}
                    {% for product_recurring in product_recurrings %}
                      <tr id="recurring-row{{ recurring_row }}">
                        <td class="text-left"><select name="product_recurring[{{ recurring_row }}][recurring_id]" class="form-control">
                            {% for recurring in recurrings %}
                              {% if recurring.recurring_id == product_recurring.recurring_id %}
                                <option value="{{ recurring.recurring_id }}" selected="selected">{{ recurring.name }}</option>
                              {% else %}
                                <option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
                              {% endif %}
                            {% endfor %}
                          </select></td>
                        <td class="text-left"><select name="product_recurring[{{ recurring_row }}][customer_group_id]" class="form-control">
                            {% for customer_group in customer_groups %}
                              {% if customer_group.customer_group_id == product_recurring.customer_group_id %}
                                <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                              {% else %}
                                <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                              {% endif %}
                            {% endfor %}
                          </select></td>
                        <td class="text-right"><button type="button" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fas fa-copy"></i></button></td>
                      </tr>
                      {% set recurring_row = recurring_row + 1 %}
                    {% endfor %}
                  {% else %}
                    <tr>
                      <td colspan="3" class="text-center">{{ text_no_results }}</td>
                    </tr>
