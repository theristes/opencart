<form action="{{ action }}" method="post">
  <div class="form-group">
    <label for="input-status">{{ entry_status }}</label>
    <select name="payment_on_spot_status" id="input-status" class="form-control">
      <option value="1" {{ payment_on_spot_status ? 'selected' : '' }}>Enabled</option>
      <option value="0" {{ not payment_on_spot_status ? 'selected' : '' }}>Disabled</option>
    </select>
  </div>

  <div class="form-group">
    <label for="input-sort-order">{{ entry_sort_order }}</label>
    <input type="text" name="payment_on_spot_sort_order" value="{{ payment_on_spot_sort_order }}" class="form-control" />
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
  <a href="{{ cancel }}" class="btn btn-default">Cancel</a>
</form>