<div class="product-thumb" style="padding: 16px; text-align: center;">
  <div class="image" style="margin-bottom: 12px;">
    <a href="{{ href }}">
      <img 
        src="{{ thumb }}" 
        alt="{{ name }}" 
        title="{{ name }}" 
        class="img-fluid"
        width="{{ thumb_width }}"  
        height="{{ thumb_height }}"
        style="width: {{ thumb_width }}px; height: {{ thumb_height }}px; object-fit: contain; max-height: 240px; margin: 0 auto; display: block;" 
      />
    </a>
  </div>

  <div class="content">
    <div class="description" style="margin-bottom: 12px;">
      <h4 style="margin: 8px 0;">
        <a 
          href="{{ href }}" 
          style="font-size: 20px; font-weight: 600; line-height: 1.3; display: block; color: #4B3F9C;"
        >
          {{ name|split(' ')|slice(0, 2)|join(' ')|title|length > 20 
             ? name|split(' ')|slice(0, 2)|join(' ')|title|slice(0, 20) ~ '...' 
             : name|split(' ')|slice(0, 2)|join(' ')|title }}
        </a>
      </h4>
      <p style="font-size: 14px; color: #555; margin: 0;">{{ description|e }}</p>
    </div>

    {% if price %}
      <div class="price" style="margin-bottom: 12px;">
        {% if not special %}
          <span class="price-new" style="font-size: 18px; font-weight: bold; color: #008000;">{{ price }}</span>
        {% else %}
          <span class="price-new" style="font-size: 18px; font-weight: bold; color: #008000;">{{ special }}</span> 
          <span class="price-old" style="font-size: 14px; color: #888; text-decoration: line-through;">{{ price }}</span>
        {% endif %}
        {% if tax %}
          <span class="price-tax" style="font-size: 12px; color: #777; display: block; margin-top: 2px;">
            {{ text_tax }} {{ tax }}
          </span>
        {% endif %}
      </div>
    {% endif %}

    {% if review_status and rating %}
      <div class="rating" style="margin-bottom: 12px; color: #f5c518; font-size: 14px;">
        {% for i in 1..5 %}
          {% if rating < i %}
            <span class="fa-stack"><i class="fa-regular fa-star fa-stack-1x"></i></span>
          {% else %}
            <span class="fa-stack"><i class="fa-solid fa-star fa-stack-1x"></i></span>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart">
      <div class="button" style="display: flex; justify-content: center; gap: 12px; margin-top: 8px;">
        <button type="submit" formaction="{{ cart_add }}" data-bs-toggle="tooltip" title="{{ button_cart }}" style="background: none; border: none; font-size: 20px; color: #4B3F9C;">
          <i class="fa-solid fa-shopping-cart"></i>
        </button>
        <button type="submit" formaction="{{ wishlist_add }}" data-bs-toggle="tooltip" title="{{ button_wishlist }}" style="background: none; border: none; font-size: 20px; color: #4B3F9C;">
          <i class="fa-solid fa-heart"></i>
        </button>
        <button type="submit" formaction="{{ compare_add }}" data-bs-toggle="tooltip" title="{{ button_compare }}" style="background: none; border: none; font-size: 20px; color: #4B3F9C;">
          <i class="fa-solid fa-arrow-right-arrow-left"></i>
        </button>
      </div>
      <input type="hidden" name="product_id" value="{{ product_id }}"/> 
      <input type="hidden" name="quantity" value="{{ minimum }}"/>
    </form>
  </div>
</div>
